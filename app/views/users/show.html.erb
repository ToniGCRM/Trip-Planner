<h1>About <%= @user.name %></h1>

<div class="container">
  <h3><%= @user.name%>'s Profile</h3>
    <p>Name: <%= @user.name %> </p>
    <p>Email: <%= @user.email %> </p>
</div>

<div>
  <%= link_to 'View Trips', user_trips_path(@user)%>
</div>

<footer>
  <div> <%= link_to 'Go back', users_path %></div>
  <div> <%= link_to 'Home', users_path %></div>
  <div> <%= link_to 'Edit', edit_user_path(@user) %></div>
  <div> <%= link_to 'Delete', user_path(@user.id), method: :delete %></div>
</footer>
